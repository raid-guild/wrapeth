{
  "name": "@toruslabs/fetch-node-details",
  "version": "2.0.2",
  "description": "Fetches the node details from torus nodelist smart contract",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "babel ./src --out-dir dist/ && cp ./src/nodeDetailManager.d.ts ./dist/nodeDetailManager.d.ts && cp ./src/abi.json ./dist/abi.json",
    "prepack": "npm run build",
    "pretest": "npm run build",
    "test": "mocha",
    "lint:js": "eslint --fix '**/*.js'"
  },
  "dependencies": {
    "web3-eth-contract": "^1.2.6",
    "web3-utils": "^1.2.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torusresearch/fetch-node-details.git"
  },
  "keywords": [
    "torus",
    "nodes",
    "torus-embed",
    "torus-website",
    "fetch-node-details",
    "toruslabs"
  ],
  "author": "Chaitanya Potti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/torusresearch/fetch-node-details/issues"
  },
  "homepage": "https://github.com/torusresearch/fetch-node-details#readme"
}
